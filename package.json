{
  "private": true,
  "name": "patwoz-de",
  "description": "https://patwoz.de",
  "license": "MIT",
  "scripts": {
    "build": "remix build",
    "dev:remix": "remix watch",
    "postinstall": "remix setup cloudflare-workers",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "dev:mf": "miniflare --build-command \"npm run dev:worker\" --watch",
    "deploy": "npm run build && wrangler publish",
    "compile:css": "postcss styles --base styles --dir app/styles",
    "dev:css": "pnpm compile:css -- -w",
    "build:css": "pnpm compile:css -- --env production",
    "dev": "concurrently -c green,cyan,yellow npm:dev:remix npm:dev:mf npm:dev:css",
    "validate": "concurrently npm:build:* npm:check-format",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{ts,tsx,json,md,css}\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --check"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.0.6",
    "@remix-run/react": "^1.0.6",
    "@tailwindcss/typography": "^0.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.1.1",
    "remix": "^1.0.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@patwoz/prettier-config": "^1.1.0",
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "esbuild": "0.13.14",
    "miniflare": "2.0.0-next.3",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js",
  "prettier": "@patwoz/prettier-config"
}
