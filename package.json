{
  "private": true,
  "name": "patwoz-de",
  "description": "https://patwoz.de",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/worker.js",
  "prettier": "@patwoz/prettier-config",
  "scripts": {
    "start": "bun run ./server.ts",
    "build": "bun run build:css && bun run build:remix",
    "build:remix": "bun run node_modules/@remix-run/dev/dist/cli.js build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev:remix": "bun run node_modules/@remix-run/dev/dist/cli.js watch",
    "dev:server": "bun run ./server.ts dev",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev": "bun run build:remix && run-p dev:*",
    "prettier": "prettier --ignore-path .gitignore '**/*.{ts,tsx,json,md,css}'",
    "format": "bun run prettier --write",
    "check-format": "bun run prettier -- --check",
    "check-build": "bun run build",
    "validate": "run-p check-*",
    "docker:build": "docker build -t patwoz-de ."
  },
  "dependencies": {
    "@remix-run/node": "^1.7.6",
    "@remix-run/react": "^1.7.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^7.1.1"
  },
  "devDependencies": {
    "@patwoz/prettier-config": "^1.1.0",
    "@remix-run/dev": "^1.7.6",
    "@remix-run/eslint-config": "^1.7.6",
    "@tailwindcss/typography": "^0.5.8",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "bun-types": "^0.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4"
  }
}
