{
  "private": true,
  "name": "patwoz-de",
  "description": "https://patwoz.de",
  "license": "MIT",
  "sideEffects": false,
  "main": "./server.ts",
  "scripts": {
    "build-start": "bun run build && bun run start",
    "start": "NODE_ENV=production bun run ./server.ts",
    "bun:build": "NODE_ENV=production bun build ./server.ts --minify --outfile index.js --target bun --external ./build",
    "build": "NODE_ENV=production bun run build:remix",
    "build:remix": "bun run remix build",
    "dev:remix": "bun run remix watch",
    "dev:server": "NODE_ENV=development bun run --hot ./server.ts",
    "dev": "bun run build:remix && run-p dev:*",
    "prettier": "prettier --ignore-path .gitignore '**/*.{ts,tsx,json,md,css}'",
    "format": "bun run prettier --write",
    "test": "bun wiptest",
    "check-format": "bun run prettier -- --check",
    "check-build": "bun run build",
    "check-lint": "eslint --cache --ext .tsx,.ts,.js .",
    "check-types": "tsc --noEmit --skipLibCheck",
    "check-tests": "bun run test",
    "validate": "run-p check-*",
    "docker:build": "docker build -t patwoz-de .",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.17",
    "@remix-run/node": "^1.16.0",
    "@remix-run/react": "^1.16.0",
    "clsx": "^1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.12.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.33.0",
    "@remix-run/dev": "^1.16.0",
    "@remix-run/eslint-config": "^1.16.0",
    "@tailwindcss/typography": "^0.5.9",
    "@types/react": "^18.2.5",
    "@types/react-dom": "^18.2.4",
    "bun-types": "^0.5.8",
    "eslint": "^8.40.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4"
  }
}
