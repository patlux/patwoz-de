      <a
        href="/work/kulturpass"
        class="flex items-center gap-4 p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-zinc-800 transition-colors group"
      >
        <div
          class="w-16 h-12 flex items-center justify-center bg-gray-50 dark:bg-zinc-800 rounded-lg group-hover:bg-white dark:group-hover:bg-zinc-700"
        >
          <img alt="SAP" src="/company/sap.svg" class="h-6 w-auto" />
        </div>
        <div class="flex-1">
          <span class="font-medium text-gray-900 dark:text-gray-100"
            >SAP / KulturPass</span
          >
          <span class="block text-xs text-gray-500 dark:text-gray-400"
            >Enterprise Software</span
          >
        </div>
        <span
          class="text-xs font-medium text-gray-400 group-hover:text-gray-600 dark:group-hover:text-gray-300 flex items-center gap-1"
        >
          View project
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            class="w-3 h-3"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
          </svg>
        </span>
      </a>

      <!-- Porsche - Internal project page -->
      <a
        href="/work/porsche"
        class="flex items-center gap-4 p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-zinc-800 transition-colors group"
