---
import Layout from '~/layouts/Layout.astro'
import BaseLayout from '~/components/BaseLayout.astro'
import Footer from '~/components/Footer.astro'
import ClientMarquee from '~/components/ClientMarquee.astro'
import { classNames } from '~/utils/classNames'
---

<Layout title="Work">
  <BaseLayout>
    <article class="prose lg:prose-lg mt-12">
      <h1>Client Work</h1>
      <p>
        A selection of projects I've worked on as a freelance developer. Each
        project showcases my expertise in building high-quality mobile and web
        applications.
      </p>

      <div class="not-prose grid gap-6 mt-8">
        <!-- Porsche Digital -->
        <a
          href="/work/porsche"
          class={classNames(
            'group flex flex-col sm:flex-row gap-6 p-6',
            'border border-gray-200 rounded-xl',
            'hover:border-gray-300 hover:shadow-lg',
            'transition-all duration-200',
          )}
        >
          <div
            class="flex-shrink-0 flex items-center justify-center w-full sm:w-32 h-24 bg-gray-50 rounded-lg"
          >
            <img
              src="/company/Porsche-Logo.webp"
              alt="Porsche Logo"
              width="80"
              height="46"
              class="opacity-80"
            />
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 group-hover:text-black"
            >
              Porsche Digital
            </h3>
            <p class="text-gray-600 mt-1">
              Fullstack development for a consumer-facing mobile app with
              real-time video streaming, in-app subscriptions, and serverless
              AWS backend. 850+ commits across mobile, web, and infrastructure.
            </p>
            <div class="flex flex-wrap gap-2 mt-3">
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                React Native
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                AWS CDK
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                TypeScript
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                Fullstack
              </span>
            </div>
          </div>
          <div
            class="flex-shrink-0 flex items-center text-gray-400 group-hover:text-gray-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
          </div>
        </a>

        <!-- SAP KulturPass -->
        <a
          href="/work/kulturpass"
          class={classNames(
            'group flex flex-col sm:flex-row gap-6 p-6',
            'border border-gray-200 rounded-xl',
            'hover:border-gray-300 hover:shadow-lg',
            'transition-all duration-200',
          )}
        >
          <div
            class="flex-shrink-0 flex items-center justify-center w-full sm:w-32 h-24 bg-gray-50 rounded-lg"
          >
            <img
              src="/company/sap.svg"
              alt="SAP Logo"
              width="80"
              height="40"
              class="opacity-80"
            />
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 group-hover:text-black"
            >
              SAP / KulturPass DE
            </h3>
            <p class="text-gray-600 mt-1">
              Contributed to the KulturPass mobile app, a German government
              initiative providing 18-year-olds with cultural budget.
              Implemented favorites, form validation, secure storage, and Redux
              architecture.
            </p>
            <div class="flex flex-wrap gap-2 mt-3">
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                React Native
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                Redux Toolkit
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                TypeScript
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                DevOps
              </span>
            </div>
          </div>
          <div
            class="flex-shrink-0 flex items-center text-gray-400 group-hover:text-gray-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
          </div>
        </a>

        <!-- Stroeer / t-online -->
        <a
          href="/work/stroeer"
          class={classNames(
            'group flex flex-col sm:flex-row gap-6 p-6',
            'border border-gray-200 rounded-xl',
            'hover:border-gray-300 hover:shadow-lg',
            'transition-all duration-200',
          )}
        >
          <div
            class="flex-shrink-0 flex items-center justify-center w-full sm:w-32 h-24 bg-gray-50 rounded-lg"
          >
            <div class="flex flex-col items-center gap-1">
              <img
                src="/company/str-logo-white.svg"
                alt="Stroeer Logo"
                width="80"
                height="17"
                class="opacity-80"
              />
              <img
                src="/company/t-online-desktop.327ab976.svg"
                alt="t-online Logo"
                width="60"
                height="13"
                class="opacity-80"
              />
            </div>
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 group-hover:text-black"
            >
              Stroeer / t-online
            </h3>
            <p class="text-gray-600 mt-1">
              Built the t-online news mobile app from the ground up using React
              Native and Expo. Implemented core features including configurable
              navigation, search, push notifications, and ad monetization.
            </p>
            <div class="flex flex-wrap gap-2 mt-3">
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                React Native
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                Expo
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                TypeScript
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                DevOps
              </span>
            </div>
          </div>
          <div
            class="flex-shrink-0 flex items-center text-gray-400 group-hover:text-gray-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
          </div>
        </a>

        <!-- ABL -->
        <a
          href="/work/abl"
          class={classNames(
            'group flex flex-col sm:flex-row gap-6 p-6',
            'border border-gray-200 rounded-xl',
            'hover:border-gray-300 hover:shadow-lg',
            'transition-all duration-200',
          )}
        >
          <div
            class="flex-shrink-0 flex items-center justify-center w-full sm:w-32 h-24 bg-gray-50 rounded-lg"
          >
            <img
              src="/company/abl.svg"
              alt="ABL Logo"
              width="80"
              height="32"
              class="opacity-80"
            />
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 group-hover:text-black"
            >
              ABL
            </h3>
            <p class="text-gray-600 mt-1">
              Built and maintained the ABL Configuration App for EV wallbox
              setup and management. 1,300+ commits over multiple years,
              including device communication via WiFi/Bluetooth, firmware
              updates, and multi-language support.
            </p>
            <div class="flex flex-wrap gap-2 mt-3">
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                React Native
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                MobX
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                TypeScript
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                IoT
              </span>
            </div>
          </div>
          <div
            class="flex-shrink-0 flex items-center text-gray-400 group-hover:text-gray-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
          </div>
        </a>

        <!-- IBM / Barmer -->
        <a
          href="/work/ibm"
          class={classNames(
            'group flex flex-col sm:flex-row gap-6 p-6',
            'border border-gray-200 rounded-xl',
            'hover:border-gray-300 hover:shadow-lg',
            'transition-all duration-200',
          )}
        >
          <div
            class="flex-shrink-0 flex items-center justify-center w-full sm:w-32 h-24 bg-gray-50 rounded-lg"
          >
            <div class="flex flex-col items-center gap-2">
              <img
                src="/company/IBM_logo.svg"
                alt="IBM Logo"
                width="50"
                height="20"
                class="opacity-80"
              />
              <img
                src="/company/barmer.svg"
                alt="Barmer Logo"
                width="60"
                height="16"
                class="opacity-80"
              />
            </div>
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 group-hover:text-black"
            >
              IBM iX / Barmer
            </h3>
            <p class="text-gray-600 mt-1">
              Frontend development for Barmer, one of Germany's largest health
              insurers. Contributed to the Bonus module in the Barmer App and
              the Puls cross-platform design system.
            </p>
            <div class="flex flex-wrap gap-2 mt-3">
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                React Native
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                React
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                TypeScript
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                Design System
              </span>
            </div>
          </div>
          <div
            class="flex-shrink-0 flex items-center text-gray-400 group-hover:text-gray-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
          </div>
        </a>

        <!-- Olympia Verlag / Kicker -->
        <a
          href="/work/kicker"
          class={classNames(
            'group flex flex-col sm:flex-row gap-6 p-6',
            'border border-gray-200 rounded-xl',
            'hover:border-gray-300 hover:shadow-lg',
            'transition-all duration-200',
          )}
        >
          <div
            class="flex-shrink-0 flex items-center justify-center w-full sm:w-32 h-24 bg-gray-50 rounded-lg"
          >
            <img
              src="/company/kicker.svg"
              alt="Kicker Logo"
              width="80"
              height="32"
              class="opacity-80"
            />
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 group-hover:text-black"
            >
              Olympia Verlag (Kicker)
            </h3>
            <p class="text-gray-600 mt-1">
              Lead fullstack development for FWMFL, a podcast and audiobook
              streaming platform for football fans. 1,600+ commits across mobile
              app, backend services (Go/Rust), website, and Kubernetes
              infrastructure.
            </p>
            <div class="flex flex-wrap gap-2 mt-3">
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                React Native
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                Go / Rust
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                Kubernetes
              </span>
              <span
                class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"
              >
                Fullstack
              </span>
            </div>
          </div>
          <div
            class="flex-shrink-0 flex items-center text-gray-400 group-hover:text-gray-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
          </div>
        </a>
      </div>
    </article>

    <ClientMarquee />

    <Footer />
  </BaseLayout>
</Layout>
