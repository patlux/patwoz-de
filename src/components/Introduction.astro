---
import { Image } from 'astro:assets'
import meImage from '~/assets/images/me.jpg'
const currentPath = Astro.url.pathname
const isGerman = currentPath.startsWith('/de')
const labels = isGerman
  ? {
      available: 'Verfügbar',
      hello: 'Hallo, ich bin',
      role: 'Software Engineer & Freelance Entwickler',
      location: 'Nürnberg, Deutschland',
      experience: '10+ Jahre Erfahrung',
      intro:
        'Ich bin ein leidenschaftlicher Softwareentwickler, der mit 16 das Programmieren entdeckt hat und seitdem nicht mehr aufgehört hat. Heute spezialisiere ich mich als <strong>Frontend Engineer</strong> mit Expertise in <strong>TypeScript</strong>, <strong>React</strong> und <strong>React Native</strong>. Außerdem übernehme ich <strong>DevOps</strong>, baue Infrastruktur mit <strong>Docker</strong>, <strong>Kubernetes</strong> und <strong>CI/CD-Pipelines</strong> für reibungslose Deployments.',
      ctaTitle: 'Suchen Sie einen Freelance-Entwickler?',
      ctaBody:
        'Ich bin aktuell für neue Projekte verfügbar und helfe gern dabei, Ihre Vision umzusetzen.',
      ctaButton: 'Kontakt aufnehmen',
    }
  : {
      available: 'Available',
      hello: "Hello, I'm",
      role: 'Software Engineer & Freelance Developer',
      location: 'Nuremberg, Germany',
      experience: '10+ Years Experience',
      intro:
        "I'm a passionate software developer who discovered coding at 16 and never looked back. Today, I specialize as a <strong>frontend engineer</strong> with expertise in <strong>TypeScript</strong>, <strong>React</strong>, and <strong>React Native</strong>. I also handle <strong>DevOps</strong>, setting up infrastructure with <strong>Docker</strong>, <strong>Kubernetes</strong>, and <strong>CI/CD pipelines</strong> for smooth automated deployments.",
      ctaTitle: 'Looking for a freelance developer?',
      ctaBody:
        "I'm currently available for new projects and would love to help bring your vision to life.",
      ctaButton: 'Get in Touch',
    }
---

<div class="animate-fade-in-up opacity-0">
  <!-- Hero section with warm styling -->
  <div class="relative">
    <!-- Decorative background element -->
    <div
      class="absolute -top-4 -left-4 w-32 h-32 bg-accent-100 dark:bg-accent-900/20 rounded-full blur-3xl opacity-60"
    >
    </div>

    <div class="relative flex flex-col sm:flex-row items-start gap-6">
      <!-- Profile image with warm border -->
      <div class="relative flex-shrink-0">
        <div
          class="absolute inset-0 bg-gradient-to-br from-accent-300 to-warm-400 dark:from-accent-600 dark:to-warm-600 rounded-2xl rotate-3 scale-105"
        >
        </div>
        <Image
          class="relative rounded-2xl shadow-lg ring-4 ring-warm-50 dark:ring-dark-bg"
          src={meImage}
          width={140}
          height={140}
          format="webp"
          alt="Patrick Wozniak"
        />
        <!-- Available badge -->
        <div
          class="absolute -bottom-2 -right-2 flex items-center gap-1.5 bg-green-500 text-white text-xs font-semibold px-2.5 py-1 rounded-full shadow-lg"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-300 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-200"
            ></span>
          </span>
          {labels.available}
        </div>
      </div>

      <!-- Text content -->
      <div class="flex-1 pt-2">
        <p
          class="text-warm-500 dark:text-warm-400 text-sm font-medium tracking-wide uppercase"
        >
          {labels.hello}
        </p>
        <h1 class="text-3xl sm:text-4xl font-bold mt-1 font-display">
          Patrick Wozniak
        </h1>
        <p
          class="text-xl text-warm-600 dark:text-warm-400 mt-1 font-display italic"
        >
          {labels.role}
        </p>

        <!-- Quick stats -->
        <div class="flex flex-wrap gap-4 mt-4">
          <div
            class="flex items-center gap-2 text-sm text-warm-600 dark:text-warm-400"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="w-4 h-4 text-accent-500"
            >
              <path
                fill-rule="evenodd"
                d="m9.69 18.933.003.001C9.89 19.02 10 19 10 19s.11.02.308-.066l.002-.001.006-.003.018-.008a5.741 5.741 0 00.281-.14c.186-.096.446-.24.757-.433.62-.384 1.445-.966 2.274-1.765C15.302 14.988 17 12.493 17 9A7 7 0 103 9c0 3.492 1.698 5.988 3.355 7.584a13.731 13.731 0 002.273 1.765 11.842 11.842 0 00.976.544l.062.029.018.008.006.003zM10 11.25a2.25 2.25 0 100-4.5 2.25 2.25 0 000 4.5z"
                clip-rule="evenodd"></path>
            </svg>
            {labels.location}
          </div>
          <div
            class="flex items-center gap-2 text-sm text-warm-600 dark:text-warm-400"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="w-4 h-4 text-accent-500"
            >
              <path
                d="M10 9.25a.75.75 0 01.75.75v4.25a.75.75 0 01-1.5 0V10a.75.75 0 01.75-.75zM10 5.25a1 1 0 100 2 1 1 0 000-2z"
              ></path>
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm0-1.5a6.5 6.5 0 100-13 6.5 6.5 0 000 13z"
                clip-rule="evenodd"></path>
            </svg>
            {labels.experience}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<article class="prose lg:prose-lg mt-10 animate-fade-in-up opacity-0 stagger-2">
  <p class="text-lg leading-relaxed">
    <span set:html={labels.intro} />
  </p>
</article>

<!-- CTA Section -->
<div
  class="mt-8 p-6 bg-gradient-to-br from-accent-50 to-warm-100 dark:from-accent-900/20 dark:to-warm-900/20 rounded-2xl border border-accent-200 dark:border-accent-800/30 animate-fade-in-up opacity-0 stagger-3"
>
  <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
    <div class="flex-1">
      <h4
        class="font-display text-lg font-semibold text-warm-900 dark:text-warm-100"
      >
        {labels.ctaTitle}
      </h4>
      <p class="text-warm-600 dark:text-warm-400 text-sm mt-1">
        {labels.ctaBody}
      </p>
    </div>
    <a
      href="mailto:hi@patwoz.de"
      class="inline-flex items-center gap-2 bg-accent-500 hover:bg-accent-600 text-white font-semibold px-5 py-2.5 rounded-xl transition-all duration-300 glow-accent hover:-translate-y-0.5"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
        fill="currentColor"
        class="w-5 h-5"
      >
        <path
          d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z"
        ></path>
        <path
          d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z"
        ></path>
      </svg>
      {labels.ctaButton}
    </a>
  </div>
</div>
