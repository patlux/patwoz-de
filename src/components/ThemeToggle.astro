---
/**
 * ThemeToggle - Three-state theme toggle
 * - Default (system): shows sun/moon based on system preference
 * - User forced dark: shows moon with toggled state
 * - User forced light: shows sun with toggled state
 */
---

<button
  type="button"
  class="theme-toggle h-9 w-9 flex items-center justify-center rounded-lg transition-colors"
  aria-label="Toggle theme"
>
  <!-- Sun icon -->
  <svg
    data-theme-icon="light"
    class="w-5 h-5 hidden"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
    ></path>
  </svg>

  <!-- Moon icon -->
  <svg
    data-theme-icon="dark"
    class="w-5 h-5 hidden"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
    ></path>
  </svg>
</button>

<script>
  function initThemeToggle() {
    const toggles = Array.from(document.querySelectorAll('.theme-toggle'))
    if (!toggles.length) return

    function getStoredTheme(): string | null {
      return localStorage.getItem('theme')
    }

    function systemPrefersDark(): boolean {
      return window.matchMedia('(prefers-color-scheme: dark)').matches
    }

    function applyTheme(theme: string | null) {
      const shouldBeDark =
        theme === 'dark' || (theme === null && systemPrefersDark())

      if (shouldBeDark) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    }

    function updateState(toggle: Element, theme: string | null) {
      const iconLight = toggle.querySelector('[data-theme-icon="light"]')
      const iconDark = toggle.querySelector('[data-theme-icon="dark"]')
      if (!iconLight || !iconDark) return

      const isForced = theme !== null
      const showMoon =
        theme === 'dark' || (theme === null && systemPrefersDark())

      const lightClasses = isForced
        ? 'w-5 h-5 text-amber-500'
        : 'w-5 h-5 text-gray-500 dark:text-gray-400'
      const darkClasses = isForced
        ? 'w-5 h-5 text-blue-400'
        : 'w-5 h-5 text-gray-500 dark:text-gray-400'

      iconLight.setAttribute(
        'class',
        showMoon ? `${lightClasses} hidden` : lightClasses,
      )
      iconDark.setAttribute(
        'class',
        showMoon ? darkClasses : `${darkClasses} hidden`,
      )

      toggle.className = isForced
        ? 'theme-toggle h-9 w-9 flex items-center justify-center rounded-lg transition-colors bg-gray-200 dark:bg-zinc-700 hover:bg-gray-300 dark:hover:bg-zinc-600'
        : 'theme-toggle h-9 w-9 flex items-center justify-center rounded-lg transition-colors hover:bg-gray-200 dark:hover:bg-zinc-700'
    }

    function updateAriaLabel(toggle: Element, theme: string | null) {
      if (theme === 'light') {
        toggle.setAttribute(
          'aria-label',
          'Theme: Light mode. Click to use system preference.',
        )
      } else if (theme === 'dark') {
        toggle.setAttribute(
          'aria-label',
          'Theme: Dark mode. Click to use system preference.',
        )
      } else {
        toggle.setAttribute(
          'aria-label',
          'Theme: System preference. Click to toggle.',
        )
      }
    }

    function performThemeChange(next: string | null) {
      if (next === null) {
        localStorage.removeItem('theme')
      } else {
        localStorage.setItem('theme', next)
      }

      applyTheme(next)
      toggles.forEach((toggle) => {
        updateState(toggle, next)
        updateAriaLabel(toggle, next)
      })
    }

    function handleClick(event: MouseEvent) {
      const current = getStoredTheme()
      const prefersDark = systemPrefersDark()

      let next: string | null

      if (current === null) {
        next = prefersDark ? 'light' : 'dark'
      } else {
        next = null
      }

      const x = event.clientX
      const y = event.clientY

      document.documentElement.style.setProperty(
        '--view-transition-x',
        `${x}px`,
      )
      document.documentElement.style.setProperty(
        '--view-transition-y',
        `${y}px`,
      )

      if (document.startViewTransition) {
        document.startViewTransition(() => {
          performThemeChange(next)
        })
      } else {
        performThemeChange(next)
      }
    }

    const initialTheme = getStoredTheme()
    toggles.forEach((toggle) => {
      updateState(toggle, initialTheme)
      updateAriaLabel(toggle, initialTheme)
      toggle.addEventListener('click', handleClick)
    })

    window
      .matchMedia('(prefers-color-scheme: dark)')
      .addEventListener('change', () => {
        const theme = getStoredTheme()
        if (theme === null) {
          applyTheme(null)
          toggles.forEach((toggle) => updateState(toggle, null))
        }
      })
  }

  // Run on initial load
  initThemeToggle()

  // Re-run after Astro page transitions (View Transitions)
  document.addEventListener('astro:after-swap', initThemeToggle)
</script>
