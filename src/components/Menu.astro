<script is:inline>
  ;(() => {
    const toggle = document.getElementById('menu-toggle')
    const menu = document.getElementById('mobile-menu')
    if (!toggle || !menu) return

    const shouldScroll = () => window.matchMedia('(max-width: 1279px)').matches

    let scrollYBeforeOpen = 0

    const scrollToBottom = () => {
      if (!shouldScroll()) return
      menu.scrollTop = menu.scrollHeight
    }

    const setBodyScroll = (locked, forcedScrollY) => {
      const body = document.body
      const html = document.documentElement

      if (locked) {
        if (body.dataset.scrollLock === 'true') return
        const scrollY =
          typeof forcedScrollY === 'number'
            ? forcedScrollY
            : window.scrollY || document.documentElement.scrollTop
        body.dataset.scrollLock = 'true'
        body.dataset.scrollY = String(scrollY)
        body.style.position = 'fixed'
        body.style.top = `-${scrollY}px`
        body.style.left = '0'
        body.style.right = '0'
        body.style.width = '100%'
        html.classList.add('overflow-hidden')
        body.classList.add('touch-none')
      } else {
        if (body.dataset.scrollLock !== 'true') return
        const previousScrollY = Number(body.dataset.scrollY || '0')
        body.style.position = ''
        body.style.top = ''
        body.style.left = ''
        body.style.right = ''
        body.style.width = ''
        body.dataset.scrollLock = 'false'
        body.dataset.scrollY = ''
        html.classList.remove('overflow-hidden')
        body.classList.remove('touch-none')
        requestAnimationFrame(() => {
          window.scrollTo(0, previousScrollY)
        })
      }
    }

    const labels = Array.from(
      document.querySelectorAll('label[for="menu-toggle"]'),
    )
    labels.forEach((label) => {
      label.addEventListener('pointerdown', () => {
        if (!toggle.checked) {
          scrollYBeforeOpen =
            window.scrollY || document.documentElement.scrollTop
        }
      })
    })

    setBodyScroll(toggle.checked && shouldScroll(), scrollYBeforeOpen)

    toggle.addEventListener('change', () => {
      const isOpen = toggle.checked
      setBodyScroll(isOpen && shouldScroll(), scrollYBeforeOpen)
      if (isOpen) {
        requestAnimationFrame(scrollToBottom)
      }
    })

    window.addEventListener('resize', () => {
      if (!toggle.checked) return
      if (!shouldScroll()) {
        setBodyScroll(false)
        return
      }
      requestAnimationFrame(scrollToBottom)
    })

    document.addEventListener('astro:after-swap', () => {
      if (!toggle.checked) return
      setBodyScroll(shouldScroll())
    })
  })()
</script>
