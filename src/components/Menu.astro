---
import { Image } from 'astro:assets'
import { classNames } from '~/utils/classNames'
import GithubIcon from '~/icons/GithubIcon.astro'
import LinkedInIcon from '~/icons/LinkedInIcon.astro'
import StackOverflowIcon from '~/icons/StackOverflowIcon.astro'
import TwitterIcon from '~/icons/TwitterIcon.astro'
import XingIcon from '~/icons/XingIcon.astro'
import logoImage from '~/assets/images/patwoz-logo-transparent-800px.png'

const currentPath = Astro.url.pathname
---

<div class="xl:fixed xl:inset-y-0 xl:z-50 xl:flex xl:w-72 xl:flex-col">
  <div
    class={classNames(
      'flex grow flex-col xl:gap-y-5',
      'bg-gray-50 px-6',
      'ring-1 ring-white/5',
      'border-b xl:border-b-0 xl:border-r border-gray-200',
      'xl:overflow-y-auto',
    )}
  >
    <!-- Header Bar -->
    <div
      class="flex h-16 shrink-0 items-center justify-center relative xl:justify-start"
    >
      <label
        for="menu-toggle"
        class="-m-2.5 p-2.5 text-black rounded-lg hover:bg-gray-200 absolute left-0 xl:hidden cursor-pointer"
      >
        <span class="sr-only">Open sidebar</span>
        <!-- Bars3Icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-5 w-5"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </label>
      <a href="/">
        <Image src={logoImage} alt="Logo of patwoz.de" width={60} height={60} format="webp" />
      </a>
    </div>

    <!-- Checkbox placed as direct sibling before nav for peer to work -->
    <input type="checkbox" id="menu-toggle" class="peer sr-only" />

    <!-- Navigation - peer-checked now works because checkbox is direct sibling -->
    <nav
      class="h-0 overflow-hidden peer-checked:h-auto peer-checked:flex-1 peer-checked:pb-6 peer-checked:overflow-y-auto xl:h-auto xl:flex-1 xl:pb-0 xl:overflow-y-auto flex flex-col"
    >
      <ul class="flex flex-1 flex-col xl:gap-y-7">
        <li class="sm:h-auto sm:flex-1 xl:flex-none">
          <ul
            class="space-y-1 flex flex-col sm:flex-row sm:pb-4 xl:pb-0 xl:flex-col sm:justify-center w-full sm:items-center xl:justify-start xl:items-stretch"
          >
            <li>
              <a
                href="/"
                class={classNames(
                  'flex gap-x-2 items-center',
                  'rounded-md px-4 py-2',
                  'text-sm leading-6 font-semibold',
                  'text-black hover:bg-zinc-200',
                  currentPath === '/' && 'bg-black hover:bg-black/70 text-white',
                )}
              >
                <!-- HomeIcon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"
                  ></path>
                </svg>
                Introduction
              </a>
            </li>
            <li>
              <a
                href="/blog"
                class={classNames(
                  'flex gap-x-2 items-center',
                  'rounded-md px-4 py-2',
                  'text-sm leading-6 font-semibold',
                  'text-black hover:bg-zinc-200',
                  currentPath.startsWith('/blog') &&
                    'bg-black hover:bg-black/70 text-white',
                )}
              >
                <!-- PencilIcon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125"
                  ></path>
                </svg>
                Blog
              </a>
            </li>
            <li>
              <a
                href="/what-i-built"
                class={classNames(
                  'flex gap-x-2 items-center',
                  'rounded-md px-4 py-2',
                  'text-sm leading-6 font-semibold',
                  'text-black hover:bg-zinc-200',
                  currentPath === '/what-i-built' &&
                    'bg-black hover:bg-black/70 text-white',
                )}
              >
                <!-- BriefcaseIcon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z"
                  ></path>
                </svg>
                What I Built
              </a>
            </li>
            <li>
              <a
                href="/what-i-use"
                class={classNames(
                  'flex gap-x-2 items-center',
                  'rounded-md px-4 py-2',
                  'text-sm leading-6 font-semibold',
                  'text-black hover:bg-zinc-200',
                  currentPath === '/what-i-use' &&
                    'bg-black hover:bg-black/70 text-white',
                )}
              >
                <!-- RocketLaunchIcon -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"
                  ></path>
                </svg>
                What I Use
              </a>
            </li>
          </ul>
        </li>

        <!-- Social Section -->
        <li>
          <div
            class="text-xs font-semibold leading-6 text-gray-400 uppercase"
          >
            Social
          </div>
          <ul class="mt-2 space-y-1">
            <li>
              <a
                href="https://github.com/patlux"
                class="flex gap-x-2 items-center rounded-md px-4 py-0.5 text-sm leading-6 font-semibold text-black hover:bg-zinc-200"
                target="_blank"
                rel="noopener noreferrer"
              >
                <GithubIcon class="w-5" />
                Github
                <span class="flex-1"></span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 opacity-20"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                  ></path>
                </svg>
              </a>
            </li>
            <li>
              <a
                href="https://stackoverflow.com/users/6300994/patrick-wozniak?tab=profile"
                class="flex gap-x-2 items-center rounded-md px-4 py-0.5 text-sm leading-6 font-semibold text-black hover:bg-zinc-200"
                target="_blank"
                rel="noopener noreferrer"
              >
                <StackOverflowIcon class="w-5" />
                Stack Overflow
                <span class="flex-1"></span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 opacity-20"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                  ></path>
                </svg>
              </a>
            </li>
            <li>
              <a
                href="https://twitter.com/de_patwoz"
                class="flex gap-x-2 items-center rounded-md px-4 py-0.5 text-sm leading-6 font-semibold text-black hover:bg-zinc-200"
                target="_blank"
                rel="noopener noreferrer"
              >
                <TwitterIcon class="w-5" />
                Twitter
                <span class="flex-1"></span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 opacity-20"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                  ></path>
                </svg>
              </a>
            </li>
            <li>
              <a
                href="https://www.thingiverse.com/patwoz"
                class="flex gap-x-2 items-center rounded-md px-4 py-0.5 text-sm leading-6 font-semibold text-black hover:bg-zinc-200"
                target="_blank"
                rel="noopener noreferrer"
              >
                <div
                  class="w-5 h-5 border border-black rounded-sm text-xs flex justify-center items-center"
                >
                  3D
                </div>
                Thingiverse
                <span class="flex-1"></span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 opacity-20"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                  ></path>
                </svg>
              </a>
            </li>
          </ul>
        </li>

        <!-- Business Section -->
        <li>
          <div
            class="text-xs font-semibold leading-6 text-gray-400 uppercase"
          >
            Business
          </div>
          <ul class="mt-2 space-y-1">
            <li>
              <a
                href="mailto:hi@patwoz.de"
                class={classNames(
                  'flex gap-x-2 items-center justify-center',
                  'bg-gradient-to-r from-blue-500/80 via-blue-600/80 to-blue-700/80',
                  'hover:bg-gradient-to-br',
                  'focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800',
                  'shadow-lg shadow-blue-500/20 dark:shadow-lg dark:shadow-blue-800/80',
                  'text-white text-sm font-medium text-center',
                  'rounded-lg',
                  'px-4 py-2',
                  'mb-4',
                )}
              >
                Hire me
              </a>
            </li>
            <li>
              <a
                href="https://de.linkedin.com/in/patrick-wozniak-696453123"
                class="flex gap-x-2 items-center rounded-md px-4 py-0.5 text-sm leading-6 font-semibold text-black hover:bg-zinc-200"
                target="_blank"
                rel="noopener noreferrer"
              >
                <LinkedInIcon class="w-5" />
                LinkedIn
                <span class="flex-1"></span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 opacity-20"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                  ></path>
                </svg>
              </a>
            </li>
            <li>
              <a
                href="https://www.xing.com/profile/Patrick_Wozniak5"
                class="flex gap-x-2 items-center rounded-md px-4 py-0.5 text-sm leading-6 font-semibold text-black hover:bg-zinc-200"
                target="_blank"
                rel="noopener noreferrer"
              >
                <XingIcon class="w-5" />
                Xing
                <span class="flex-1"></span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 opacity-20"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                  ></path>
                </svg>
              </a>
            </li>
            <li>
              <a
                href="https://www.freelance.de/Freiberufler/215868-Senior-TypeScript-Developer-ReactJS-React-Native/highlight=react"
                class="flex gap-x-2 items-center rounded-md px-4 py-0.5 text-sm leading-6 font-semibold text-black hover:bg-zinc-200"
                target="_blank"
                rel="noopener noreferrer"
              >
                Freelance.de
                <span class="flex-1"></span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 opacity-20"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                  ></path>
                </svg>
              </a>
            </li>
            <li>
              <a
                href="https://www.freelancermap.de/freelancer-verzeichnis/profile/entwicklung/381396-profil-patrick-wozniak-senior-typescript-developer-reactjs-react-native-aus-schwaig.html"
                class="flex gap-x-2 items-center rounded-md px-4 py-0.5 text-sm leading-6 font-semibold text-black hover:bg-zinc-200"
                target="_blank"
                rel="noopener noreferrer"
              >
                Freelancermap.de
                <span class="flex-1"></span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 opacity-20"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                  ></path>
                </svg>
              </a>
            </li>
          </ul>
        </li>
      </ul>

      <!-- Close button for mobile -->
      <label
        for="menu-toggle"
        class="xl:hidden mt-4 text-center cursor-pointer py-2 rounded-md hover:bg-zinc-200 text-sm font-semibold"
      >
        Close
      </label>
    </nav>
  </div>
</div>
