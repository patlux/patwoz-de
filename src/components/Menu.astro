---
import { classNames } from '~/utils/classNames'
import GithubIcon from '~/icons/GithubIcon.astro'
import LinkedInIcon from '~/icons/LinkedInIcon.astro'
import StackOverflowIcon from '~/icons/StackOverflowIcon.astro'
import TwitterIcon from '~/icons/TwitterIcon.astro'
import XingIcon from '~/icons/XingIcon.astro'
import ThemeToggle from '~/components/ThemeToggle.astro'
import LogoSvg from '~/assets/images/patwoz-logo.svg?raw'

const currentPath = Astro.url.pathname
---

<!-- Checkbox at top for peer access by all elements -->
<input type="checkbox" id="menu-toggle" class="peer sr-only" />

<!-- Backdrop (mobile only) -->
<label
  for="menu-toggle"
  class={classNames(
    'fixed inset-0 z-30 bg-warm-900/40 dark:bg-black/60',
    'opacity-0 pointer-events-none',
    'transition-opacity duration-300',
    'peer-checked:opacity-100 peer-checked:pointer-events-auto',
    'backdrop-blur-sm',
    'xl:hidden',
  )}
>
  <span class="sr-only">Close menu</span>
</label>

<!-- Main sidebar container -->
<div class="xl:fixed xl:inset-y-0 xl:z-50 xl:flex xl:w-72 xl:flex-col">
  <div
    class={classNames(
      'flex grow flex-col xl:gap-y-5',
      'bg-warm-100 dark:bg-dark-surface xl:px-6',
      'border-b xl:border-b-0 xl:border-r border-warm-200 dark:border-warm-800/50',
      'xl:overflow-y-auto',
    )}
  >
    <!-- Header Bar (logo + theme toggle) -->
    <div
      class="flex h-16 shrink-0 items-center justify-between px-6 w-full sm:max-w-2xl md:max-w-4xl mx-auto xl:max-w-none xl:mx-0 xl:px-0"
    >
      <a
        href="/"
        class="block w-16 pl-1 text-warm-900 dark:text-warm-100 hover:text-accent-600 dark:hover:text-accent-400 transition-colors"
        aria-label="Home"
      >
        <Fragment set:html={LogoSvg} />
      </a>
      <div class="xl:block">
        <ThemeToggle />
      </div>
    </div>

    <!-- Navigation - bottom sheet on mobile, sidebar on desktop -->
    <nav
      class={classNames(
        'mobile-menu',
        // Mobile: bottom sheet
        'fixed inset-x-0 bottom-0 z-40',
        'bg-warm-50 dark:bg-dark-surface rounded-t-3xl shadow-2xl',
        'max-h-[85vh] overflow-y-auto',
        'origin-bottom-right',
        'transition-all duration-300 ease-out',
        // Desktop: normal sidebar
        'xl:relative xl:inset-auto xl:z-auto',
        'xl:rounded-none xl:shadow-none',
        'xl:max-h-none xl:origin-center',
        'xl:scale-100 xl:opacity-100',
        'xl:h-auto xl:flex-1',
        'flex flex-col',
      )}
    >
      <!-- Close header (mobile only) -->
      <div
        class="flex items-center justify-between pl-7 pr-4 py-4 border-b border-warm-200 dark:border-warm-700/50 xl:hidden"
      >
        <a
          href="/"
          class="block w-12 pl-1 text-warm-900 dark:text-warm-100"
          aria-label="Home"
        >
          <Fragment set:html={LogoSvg} />
        </a>
        <div class="flex items-center gap-1">
          <ThemeToggle />
        </div>
      </div>

      <!-- Menu content -->
      <ul
        class="flex flex-1 flex-col gap-y-6 xl:gap-y-7 p-6 pb-24 xl:p-0 xl:pb-0"
      >
        <li class="sm:h-auto sm:flex-1 xl:flex-none">
          <ul
            class="space-y-1 flex flex-col sm:flex-row sm:pb-4 xl:pb-0 xl:flex-col sm:justify-center w-full sm:items-center xl:justify-start xl:items-stretch"
          >
            <li>
              <a
                href="/"
