---
const currentYear = new Date().getFullYear()
const currentPath = Astro.url.pathname
const isGerman = currentPath.startsWith('/de')
const imprintLabel = isGerman ? 'Impressum' : 'Imprint'
---

<div class="mt-16 mb-8 animate-fade-in-up opacity-0 stagger-6">
  <div
    role="separator"
    class="w-full h-px bg-gradient-to-r from-transparent via-warm-300 dark:via-warm-700 to-transparent"
  >
  </div>
</div>
<footer
  class="flex flex-col sm:flex-row gap-4 sm:items-center justify-between text-sm text-warm-500 dark:text-warm-500 pb-24 xl:pb-0 animate-fade-in-up opacity-0 stagger-6"
>
  <span>&copy; {currentYear} Patrick Wozniak</span>
  <slot />
  <div class="flex items-center gap-4">
    <a
      href="/de/imprint"
      class="hover:text-warm-700 dark:hover:text-warm-300 transition-colors"
      >{imprintLabel}</a
    >
    <span class="text-warm-300 dark:text-warm-700">|</span>
    <a
      href="mailto:hi@patwoz.de"
      class="hover:text-warm-700 dark:hover:text-warm-300 transition-colors"
      >hi@patwoz.de</a
    >
  </div>
</footer>
